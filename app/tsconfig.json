{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "esnext"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/admin/users/page.jsx",
    "src/app/dashboard/page.jsx",
    "src/pages/tests/users.test.jsx",
    "src/app/admin/updateUser/[id]/page.tsx", 
    "src/components/dashboard/nav.tsx"  
, "src/app/login/page.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
